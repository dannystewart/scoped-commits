{
  "name": "scoped-commits",
  "displayName": "Scoped Commits",
  "description": "Generate AI commit messages with predefined scopes",
  "version": "0.3.0",
  "icon": "media/icon.png",
  "publisher": "dannystewart",
  "repository": {
    "type": "git",
    "url": "https://github.com/dannystewart/scoped-commits"
  },
  "engines": {
    "vscode": "^1.105.1"
  },
  "categories": [
    "SCM Providers"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scoped-commits.generateCommitMessage",
        "title": "Scoped Commits: Generate Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "scoped-commits.addScopeGlobal",
        "title": "Scoped Commits: Add Scope (Global)"
      },
      {
        "command": "scoped-commits.addScopeWorkspace",
        "title": "Scoped Commits: Add Scope (Workspace)"
      }
    ],
    "menus": {
      "scm/inputBox": [
        {
          "command": "scoped-commits.generateCommitMessage",
          "group": "inline"
        }
      ],
      "scm/title": [
        {
          "command": "scoped-commits.generateCommitMessage",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Scoped Commits",
      "properties": {
        "scopedCommits.types": {
          "type": "array",
          "items": { "type": "string" },
          "default": [
            "feat",
            "fix",
            "chore",
            "docs",
            "refactor",
            "perf",
            "test",
            "build",
            "ci",
            "revert",
            "style"
          ],
          "description": "Allowed commit types. Defaults to a standard Conventional Commits set; use \"Reset This Setting\" to restore defaults."
        },
        "scopedCommits.scopes": {
          "type": "array",
          "items": { "type": "string" },
          "default": [
            "agents",
            "auth",
            "changelog",
            "comments",
            "config",
            "data",
            "deps",
            "network",
            "platform",
            "readme",
            "security",
            "state",
            "sync",
            "ui",
            "workspace"
          ],
          "description": "Allowed scope/area names. Defaults to a broadly-applicable list; use \"Reset This Setting\" to restore defaults."
        },
        "scopedCommits.scopeRequirement": {
          "type": "string",
          "enum": ["never", "onlyIfNoGoodScope", "requiredUnscoped"],
          "enumDescriptions": [
            "Never allow unscoped commits. Header must be type(scope): subject.",
            "Prefer using an allowed scope when it clearly fits; otherwise omit the scope (type: subject).",
            "Always omit scope. Header must be type: subject (never include a scope)."
          ],
          "default": "never",
          "description": "Controls whether commit scopes are required, optional, or forbidden."
        },
        "scopedCommits.promptHints": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "description": "Extra prompt rules for this workspace. Each entry is appended to the system prompt (style, definitions, conventions, etc.)."
        },
        "scopedCommits.maxSubjectLength": {
          "type": "number",
          "default": 80,
          "minimum": 40,
          "maximum": 120,
          "description": "Maximum commit subject length. Default is 80."
        },
        "scopedCommits.anthropicApiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "Anthropic API key used to generate commit messages. If empty, `ANTHROPIC_API_KEY` will be used."
        },
        "scopedCommits.anthropicModel": {
          "type": "string",
          "default": "claude-sonnet-4-5",
          "description": "Anthropic model ID to use."
        },
        "scopedCommits.maxDiffChars": {
          "type": "number",
          "default": 20000,
          "minimum": 1000,
          "maximum": 200000,
          "description": "Maximum number of diff characters to include in the prompt (diff is truncated in the middle)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
